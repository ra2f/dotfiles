#!/bin/bash
set -e

dotdir=/tmp/dotfiles
homedir=$HOME

# extglob for negative pattern matching, dotglob to match dotfiles
shopt -s extglob
# (v)erbose, (f)orce
cp -rf --remove-destination $dotdir/.!(@(|.)|git|*swp|install) $homedir 
# (all dotfiles except not ., .., .git, .gitignore, etc)
shopt -u extglob
