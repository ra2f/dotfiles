# https://git-scm.com/docs/git-config

[branch]
  sort = -committerdate

[commit]
  verbose = true

[core]
  excludesfile = $HOME/.config/git/ignore
  mergeoptions = --no-edit
  editor = nvim

[delta]
  navigate = true    # use n and N to move between diff sections when using delta as a pager
  dark = true

[diff]
  # algorithm = histogram
  # colorMoved = default

[fetch]
  prune = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  # conflictStyle = zdiff3

[pull]
	ff = only

[push]
  default = simple
  autoSetupRemote = true

[rebase]
  autosquash = true

[rerere]
  enabled = true

[include]
  path = ~/.config/git/aliases

[include]
  # Include commit template
  path = ~/.config/git/commit